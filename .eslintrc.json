{
  "extends": ["airbnb", "plugin:jest/recommended"],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "jest"],
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "semi": 2,
    "import/extensions": [2, { "js": "never" }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "env": {
    "jest/globals": true
  }
}
